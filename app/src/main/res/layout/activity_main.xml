<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/calcTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TableLayout
        android:id="@+id/calcTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:onClick="onClick"
                android:textSize="28sp"
                android:gravity="center"/>
            <TextView android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="8"
                android:onClick="onClick"
                android:gravity="center"/>
            <TextView android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="9"
                android:onClick="onClick"
                android:gravity="center"/>
            <TextView android:layout_height="120dp"
                android:id="@+id/divideBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textColor="@color/op_red"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="4"
                android:onClick="onClick"
                android:textSize="28sp"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="5"
                android:onClick="onClick"
                android:textSize="28sp"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="6"
                android:onClick="onClick"
                android:textSize="28sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/multBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="X"
                android:textColor="@color/op_red"
                android:textSize="28sp"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="1"
                android:onClick="onClick"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="2"
                android:onClick="onClick"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="3"
                android:onClick="onClick"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/minusBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textSize="28sp"
                android:text="-"
                android:textColor="@color/op_red"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/equalBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:text="="
                android:textColor="@color/op_red"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:text="0"
                android:onClick="onClick"
                android:gravity="center"
                />
            <TextView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:text="."
                android:gravity="center"
                />
            <TextView
                android:id="@+id/plusBtn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textSize="28sp"
                android:layout_weight="1"
                android:textColor="@color/op_red"
                android:text="+"
                android:gravity="center"
                />
        </TableRow>




    </TableLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/myView"
        android:layout_margin="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>